{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "outDir": "dist/",
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitReturns": true
  },
  "exclude": [
    "dist/"
  ]
}
